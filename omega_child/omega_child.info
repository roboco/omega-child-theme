name = Omega Child Theme
description = Subtheme created using Omega 4 framework.
base theme = omega
screenshot = screenshot.png
engine = phptemplate
core = 7.x

; ========================================
; Stylesheets
; ========================================
stylesheets[all][] = css/omega-child.normalize.css
stylesheets[all][] = css/omega-child.hacks.css
stylesheets[all][] = css/omega-child.styles.css
stylesheets[all][] = css/omega-child.no-query.css

; ========================================
; Scripts
; ========================================
scripts[] = js/omega-child.js
scripts[] = js/omega-child.behaviors.js

; ========================================
; Regions
; ========================================
regions[header] = Header
regions[banner] = Banner Area
regions[navigation] = Navigation
regions[highlighted] = Highlighted
regions[help] = Help
regions[content] = Content
regions[sidebar_first] = First Sidebar
regions[sidebar_second] = Second Sidebar
regions[footer] = Footer

; ========================================
; Breakpoints
; ========================================
breakpoints[fluid] = (min-width: 0px)
breakpoints[mobile] = (min-width: 480px)
breakpoints[narrow] = (min-width: 740px)
breakpoints[normal] = (min-width: 980px)
breakpoints[wide] = (min-width: 1220px)

; ========================================
; Plugins
; ========================================
plugins[panels][layouts] = panels/layouts

